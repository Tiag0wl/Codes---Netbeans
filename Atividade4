package com.mycompany.algoritimosatvividades;

import java.util.Scanner;
public class Atividade4 {

    public static void main(String[] args) {
    Scanner leitor = new Scanner (System.in);
    
    System.out.println("Digite quantos quilometros voce percorreu");
           double distancia;
           distancia = leitor.nextDouble();
           
     System.out.println("Digite em quantas horas voce percorreu essa distancia");
           double tempo;
           tempo = leitor.nextDouble();    
           
           double velocidade;
           velocidade = (distancia / tempo);
           
           System.out.println("Sua velocidade media foi essa:" );      
           System.out.println( velocidade );
    }
    
}
