import java.util.Scanner;
public class Pizzaria {
    public static void main(String[] args) {
        Scanner leitor = new Scanner(System.in);
        System.out.print("Digite o numero referente ao tamanho da pizza:");
        System.out.println("\n1-Pequena 2-Media 3-Grande 4-Super 5-Familia");
        int tamanho = leitor.nextInt();
        
        switch (tamanho) {
            case 1, 2 : System.out.println("Voce tera direito a somente um sabor");
            case 3 : System.out.println("Voce tera direito a tres sabores");
            case 4 : System.out.println("Voce tera direito a quatro sabores");
            case 5 : System.out.println("Voce tera direito a cinco sabores");
            default : System.out.println("Nao ha esse tamanho seu animal, escolha de 1 a 5");         
        }
    }
    
}
