package com.mycompany.algoritimosatvividades;

import java.util.Scanner;
public class Atividade9 {

    public static void main(String[] args) {
    Scanner leitor = new Scanner (System.in);

     System.out.println("Digite a extensao total do trajeto em km");
           double Extensao;
           Extensao = leitor.nextDouble();
           
     System.out.println("Digite a velocidade media padrao em km/h");
           double VelocidadePadrao;
           VelocidadePadrao = leitor.nextDouble();
           
     System.out.println("Digite a velocidade media automatica em km/h");
           double VelocidadeAutomatica;
           VelocidadeAutomatica = leitor.nextDouble();
           
     System.out.println("Digite o intervalo de tempo em horas");
           double intervalo;
           intervalo = leitor.nextDouble();
           
    double TempoPadrao;
    TempoPadrao = ( Extensao / VelocidadePadrao );
    
    double TempoAutomatico;
    TempoAutomatico = (  intervalo / VelocidadeAutomatica );
    
    double DistanciaAutomatica;
    DistanciaAutomatica = ( VelocidadeAutomatica * intervalo );
    
    double DiferencaExtensao;
    DiferencaExtensao = ( DistanciaAutomatica - Extensao );  
    if(DiferencaExtensao < 0) { 
        DiferencaExtensao = (DiferencaExtensao * -1);
    }
    
    System.out.print("Com a velocidade media padrao voce ira demorar ");
    System.out.print(TempoPadrao);
    System.out.println(" horas.");
    
    System.out.print("Com a velocidade media automatica voce ira percorrer ");
    System.out.print(DistanciaAutomatica);
    System.out.println("km.");
    
    System.out.print("A diferenca da distancia percorrida no automatico e a extensao total e de ");
    System.out.print(DiferencaExtensao);
    System.out.println("km.");
    
    double DistanciaResto;
    DistanciaResto = (  Extensao - DistanciaAutomatica );
    
    double DiferencaTempo;
    DiferencaTempo = (  DistanciaResto / VelocidadePadrao );
     if(DiferencaTempo < 0) { 
        DiferencaTempo = (DiferencaTempo * -1);
    }
     
    System.out.print("E faltariam ");
    System.out.print(DiferencaTempo);
    System.out.println(" horas para chegar ao final da extensao total");
    
    double VelocidadeResto;
    VelocidadeResto = (  DiferencaExtensao / DiferencaTempo );
    
    System.out.print("E seria necessario andar a ");
    System.out.print(VelocidadeResto);
    System.out.println("km/h para completar o trajeto no tempo programado");
    
    double TempoNoAutomatico;
    TempoNoAutomatico = ( Extensao / VelocidadeAutomatica );
    
    System.out.println("Caso voce fosse na velocidade automatica por toda a extensao voce iria demorar ");
    System.out.print(TempoNoAutomatico);
    System.out.println(" horas para chegar");
    }
    
}
